@page "/counter"
@using Grafik.Components.Shared
@rendermode InteractiveServer

@code {
    EventConsole console;

    private int currentCount = 0;

    private void Add()
    {
        currentCount++;
        console.Log($"Counter incremented. Current count: {currentCount}");
    }

    void Substract()
    {
        currentCount--;
        console.Log($"Counter decremented. Current count: {currentCount}", AlertStyle.Dark);
    }
}

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<RadzenButton Click="@Add" Text="Increment"></RadzenButton>
<RadzenButton Click="@Substract" Text="Decrement"></RadzenButton>

<RadzenSlider @bind-Value=@currentCount
              TValue="int"
              Min="1"
              Max="14"
              Style="margin-left:1.5rem; margin-right:1.5rem;"
              />

<EventConsole @ref="console" />